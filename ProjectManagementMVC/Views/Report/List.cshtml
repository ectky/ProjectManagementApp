@model IEnumerable<ProjectManagementMVC.ViewModels.ReportDetailsVM>
@{
    ViewBag.Title = "Index";
}

<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/Lists.css">
    <link rel="stylesheet" href="~/css/Background.css">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-light">Reports</h2>
        <p>
            <div class="col-md-auto">
                <a href="@Url.Action("Create")" class="btn btn-outline-primary btn-sm">
                    Create
                </a>
            </div>
        </p>
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-light">
                        
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>
                            @if (!User.IsInRole("Employee"))
                            {
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-outline-light" })
                                <span>|</span>
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-outline-danger" })
                                <span>|</span>
                            }
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-outline-light" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>