@model IEnumerable<ProjectManagementMVC.ViewModels.RoleDetailsVM>

@{
    ViewBag.Title = "Index";
}

<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/Lists.css">
    <link rel="stylesheet" href="~/css/RoleCss/ListRole.css">
    <link rel="stylesheet" href="~/css/Background.css">
</head>

<body>
    <div class="container">
        <h2 class="text-light">Roles</h2>
        @if (!User.IsInRole("Employee"))
        {
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
        }
        <table class="table table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-light">
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td class="action-links">
                            @if (!User.IsInRole("Employee"))
                            {
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-secondary" })
                                @Html.Raw("| ")
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })
                                @Html.Raw("|")
                            }
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-info" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
