@model IEnumerable<ProjectManagementMVC.ViewModels.ProjectDetailsVM>

@{
    ViewData["Title"] = "Projects";
}

<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Lists.css">
</head>
<body>
    <div class="text">
    <div class="container mt-4">
        <h2>Projects</h2>

        <div class="row mb-3">
            <div class="col-md-auto">
                <a href="@Url.Action("FilterProject")" class="btn btn-outline-dark btn-sm">
                    Filter projects
                </a>
            </div>
            <div class="col-md-auto">
                <a href="@Url.Action("List")" class="btn btn-outline-dark btn-sm ml-2">
                    Reset
                </a>
            </div>
        </div>



        <div id="filterCollapse" class="collapse">
            <form action="@Url.Action("FilterProject")" method="get">
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="filterName">Name</label>
                        <input type="text" id="filterName" name="Name" class="form-control" />
                    </div>
                    <div class="form-group col-md-4">
                        <label for="filterStartDate">Start Date</label>
                        <input type="date" id="filterStartDate" name="StartDate" class="form-control" />
                    </div>
                    <div class="form-group col-md-4">
                        <label for="filterEndDate">End Date</label>
                        <input type="date" id="filterEndDate" name="EndDate" class="form-control" />
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Apply Filter</button>
            </form>
        </div>

        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Start Date</th>
                    <th scope="col">End Date</th>
                    <th scope="col">Is Completed</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.IsCompleted)</td>
                        <td>
                            <div class="btn-group" role="group">
                                @if (!User.IsInRole("Employee"))
                                {
                                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-outline-primary">Edit</a>
                                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-outline-danger">Delete</a>
                                }
                                <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-outline-info">Details</a>
                                <a href="@Url.Action("ReportProject", new { id = item.Id })" class="btn btn-sm btn-outline-info">Report Project</a>
                                <a href="@Url.Action("AssignProject", new { id = item.Id })" class="btn btn-sm btn-outline-info">Assign Project</a>
                                @if (item.IsCompleted)
                                {
                                    <span class="btn btn-sm btn-success disabled">Project Completed</span>
                                }
                                else
                                {
                                    <a href="@Url.Action("CompleteProject", new { id = item.Id })" class="btn btn-sm btn-outline-success">Complete Project</a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-left mb-3">
            <a href="@Url.Action("Create")" class="btn btn-primary">Create New</a>
        </div>

    </div>
    </div>
</body>
