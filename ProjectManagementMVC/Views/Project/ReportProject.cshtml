@using ProjectManagementMVC.Controllers
@using ProjectManagement.Shared.Extensions
@model ProjectManagementMVC.ViewModels.ReportProjectEditVM

@{
    ViewBag.Title = "Report Project";
}

<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/Lists.css">
</head>
<body>

<div class="container">
    <h2 class="text-center">Report Project</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="card">
            <div class="card-body">
                @Html.ValidationSummary(true)

                <div class="form-group row">
                    @Html.LabelFor(model => model.ProjectId, new { @class = "col-md-2 col-form-label text-md-right" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.ProjectId, Model.Projects, "Choose a Project...",
                                 new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ProjectId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.ReportId, new { @class = "col-md-2 col-form-label text-md-right" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.ReportId, Model.Reports, "Choose a Report...",
                                 new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ReportId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="offset-md-2 col-md-10">
                        <button type="submit" class="btn btn-primary">Report Project</button>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="mt-3">
        @Html.ActionLink("Back to List", "List", null, new { @class = "btn btn-secondary" })
    </div>
</div>
</body>